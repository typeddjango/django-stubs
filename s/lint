#!/bin/sh

set -ex

if [[ ! -f ./.venv/lib/python3.7/site-packages/django-stubs.egg-link ]]; then
  ./.venv/bin/pip install -e .
fi


# format code
if [[ $CI ]]; then
    ./.venv/bin/black --check .
    ./.venv/bin/isort --check-only .
else
    ./.venv/bin/black .
    ./.venv/bin/isort .
fi

# type check code
./.venv/bin/mypy tests

# lint
./.venv/bin/flake8 tests
